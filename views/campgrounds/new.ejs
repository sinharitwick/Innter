<%- include ('../partials/header') -%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Restaurant</h1>
        <div style="width: 30rem; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group" style="margin: 10px;">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group" style="margin: 10px;">
                    <textarea class="form-control" type="text" name="location" id="location" placeholder="address"></textarea>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <textarea class="form-control" type="text" name="description" id="description" placeholder="description"></textarea>
                </div>
                <div class="form-group" style="margin: 10px; text-align: center;">
                    <button class="btn btn-dark">Add</button>
                </div>
            </form>
        </div>
        <p style="text-align: center;">
            <a class="btn btn-light btn-large" href="/campgrounds">&#x2190; Go back</a>
        </p>  
    </div>
</div>
<%- include ('../partials/footer') -%>