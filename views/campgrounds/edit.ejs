<%- include ('../partials/header') -%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30rem; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group" style="margin: 10px;">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group" style="margin: 10px;">
                    <textarea class="form-control" type="text" name="campground[location]" id="location"><%= campground.location %></textarea>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <textarea class="form-control" type="text" name="campground[description]" id="description"><%= campground.description %></textarea>
                </div>
                <div class="form-group" style="margin: 10px; text-align: center;">
                    <button class="btn btn-dark">Update</button>
                </div>
            </form>
        </div>
        <p style="text-align: center;">
            <a class="btn btn-light btn-large" href="/campgrounds">&#x2190; Go back</a>
        </p>  
    </div>
</div>
<%- include ('../partials/footer') -%>