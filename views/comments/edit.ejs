<%- include ('../partials/header') -%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30rem; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group" style="margin: 10px;">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group" style="margin: 10px; text-align: center;">
                    <button class="btn btn-dark">Submit</button>
                </div>
            </form>
        </div>
        <p style="text-align: center;">
            <a class="btn btn-light btn-large" href="/campgrounds">&#x2190; Go back</a>
        </p>  
    </div>
</div>
<%- include ('../partials/footer') -%>